# Prompt
export PS1="\[\[\e[1;36m[\u@\h \W]\]\n\[\e[1;36m>\e[m\] \]"

# Local bin
export PATH="~/bin:$PATH"

# Aliases
alias ls='ls -GFph'
alias ll='ls -l'
alias la='ls -la'
alias poly='rlwrap poly'

# Git Aliases
alias gco='git checkout'
alias gcm='git commit -am'
alias gpu='git push'

# Export vars
export EDITOR=nvim
